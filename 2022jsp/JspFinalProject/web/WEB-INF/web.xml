<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>*.login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>*.logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminChangePwd</servlet-name>
        <servlet-class>servlet.AdminChangePwd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminChangePwd</servlet-name>
        <url-pattern>*.change</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StudentDelete</servlet-name>
        <servlet-class>servlet.StudentDelete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentDelete</servlet-name>
        <url-pattern>*.deleteStudent</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StudentAdd</servlet-name>
        <servlet-class>servlet.StudentAdd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentAdd</servlet-name>
        <url-pattern>*.studentAdd</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StudentSelectList</servlet-name>
        <servlet-class>servlet.AdminSelectListStudent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentSelectList</servlet-name>
        <url-pattern>*.selectListStudent</url-pattern>
    </servlet-mapping>
</web-app>